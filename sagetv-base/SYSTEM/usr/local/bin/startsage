sagepath=/opt/sagetv/server
echo Changing to SageTV directory $sagepath
cd $sagepath

PIDFILE=/var/run/sagetv.pid

# You can use the sagesettings file to overwrite settings
if [ -e sagesettings ] ; then
	. sagesettings
fi

# This is more so that we can hook into docker
if [ -e sagedockerenv ] ; then
	. sagedockerenv
fi

if [ -e $PIDFILE ] ; then
   sagepid=`cat $PIDFILE`
   running=`ps --pid $sagepid | grep java`
   if [ "$running" != "" ]; then
      echo Already running
      exit 1
   fi
fi

chmod 777 /var/media/videos
chmod 777 /var/media/pictures
chmod 777 /var/media/music
sudo chmod 755 /usr/local/bin/*

/usr/local/bin/startsagecore <&- &
exit 0
